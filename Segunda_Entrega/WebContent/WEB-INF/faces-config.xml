<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	
	<!-- Para internacionalizar la aplicación -->
	<application>
		<resource-bundle>
		<base-name>messages</base-name>
		<var>msgs</var>
	</resource-bundle> </application>
	
	<!-- Bean de User -->
	<managed-bean>
		<managed-bean-name>user</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanUser</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>	
	
	<!-- Bean de Settings -->
	<!--  <managed-bean>
		<managed-bean-name>settings</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanSettings</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean> -->
	
	<!-- Mapa de navegación de error.xthml -->
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- Mapa de navegación de login.xhtml -->
	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{user.loguearse}</from-action>
			<from-outcome>EXITO_ADMIN</from-outcome>
			<to-view-id>/principalAdministrador.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-action>#{user.loguearse}</from-action>
			<from-outcome>EXITO_NORMAL</from-outcome>
			<to-view-id>/principalUsuario.xhtml</to-view-id>
		</navigation-case>		
	</navigation-rule>
	
	<!-- Mapa de navegación de registro.xhtml -->
	<!-- Mapa de navegación de index.html -->
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controller.listado}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listado.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>alta</from-outcome>
			<to-view-id>/altaForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- Mapa de navegación de listado.xhtml -->
	<navigation-rule>
		<from-view-id>/listado.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controller.baja(valumno)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listado.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>				
			<from-outcome>editar</from-outcome>
			<to-view-id>/editForm.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-action>#{controller.listado}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listado.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>alta</from-outcome>
			<to-view-id>/altaForm.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>notaneitor</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- Mapa de navegación de altaForm.xhtml -->
	<navigation-rule>
		<from-view-id>/altaForm.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controller.salva}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listado.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-action>#{controller.listado}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listado.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>alta</from-outcome>
			<to-view-id>/altaForm.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>notaneitor</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<!-- Mapa de navegación de editForm.xhtml -->
	<navigation-rule>
		<from-view-id>/editForm.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controller.salva}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listado.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-action>#{controller.listado}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/listado.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>alta</from-outcome>
			<to-view-id>/altaForm.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>notaneitor</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>