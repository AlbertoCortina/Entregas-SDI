<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	
	<!-- Para internacionalizar la aplicación -->
	<application>
		<resource-bundle>
		<base-name>messages</base-name>
		<var>msgs</var>
	</resource-bundle> </application>
	
	<!-- Bean de User -->
	<managed-bean>
		<managed-bean-name>beanUser</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanUser</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>	
	
	<!-- Bean de Login -->
	<managed-bean>
		<managed-bean-name>beanLogin</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanLogin</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<!-- Bean de Admin-->
	<managed-bean>
		<managed-bean-name>beanAdmin</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanAdmin</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<!-- Bean de Settings -->
	<!--  <managed-bean>
		<managed-bean-name>settings</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanSettings</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean> -->
	
	<!-- Mapa de navegación de error.xthml -->
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<!-- Mapa de navegación de login.xhtml -->
	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{beanLogin.loguearse}</from-action>
			<from-outcome>EXITO_ADMIN</from-outcome>
			<to-view-id>/principalAdministrador.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		
		<navigation-case>
			<from-action>#{beanLogin.loguearse}</from-action>
			<from-outcome>EXITO_NORMAL</from-outcome>
			<to-view-id>/principalUsuario.xhtml</to-view-id>
			<redirect/>
		</navigation-case>		
	</navigation-rule>
	
	<!-- Mapa de navegación de registro.xhtml -->
	
	
	<!-- Mapa de navegación de principalAdministrador.xhtml -->
	<navigation-rule>
		<from-view-id>/principalAdministrador.xhtml</from-view-id>
		
		<!--  <navigation-case>
			<from-action>#{beanLogin.cerrarSesion}</from-action>
			<from-outcome>EXITO</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
			<redirect/>
		</navigation-case>-->
		
		<navigation-case>
			<from-action>#{beanAdmin.listarUsuarios}</from-action>
			<from-outcome>EXITO</from-outcome>
			<to-view-id>/listadoUsuarios.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		
		<navigation-case>
			<from-action>#{beanAdmin.listarUsuarios}</from-action>
			<from-outcome>FALLO</from-outcome>
			<to-view-id>/principalAdministrador.xhtml</to-view-id>
		</navigation-case>
		
	</navigation-rule>
	
	
</faces-config>